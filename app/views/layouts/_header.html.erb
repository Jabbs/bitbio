<header>
	<div class="navbar navbar-inverse">
	  <div class="navbar-inner">
	    <div class="container">
        <%= link_to((image_tag 'bitbio_logo.png', alt: "bitBIO Logo"), root_path, class: 'pull-left', id: 'logo') %>
        <div class="breadcrumbs">
          <% if Rails.env.development? %>
            <%= controller_name %>_<%= action_name %>
          <% end %>
          <h1>Science Market and Science Outsourcing</h1>
        </div>
        <ul class="nav"> 
			    <li><%= link_to "Browse Projects", projects_path %></li>
			    <li><%= link_to "Providers", providers_path %></li>
			    <li><%= link_to "Researchers", researchers_path %></li>
			  </ul>
        
				<% if current_user %>
				<ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
							Welcome, <%= current_user.first_name %>! <b class="caret"></b>
						</a>
            <ul class="dropdown-menu">
              <li><a href="<%= user_path(current_user) %>"><i class="icon-user"></i> My Account</a></li>
              <li class="divider"></li>
              <li><a href="<%= logout_path %>" data-method="delete" rel="nofollow"><i class="icon-ban-circle" method="delete"></i> Logout</a></li>
            </ul>
          </li>
        </ul>
				<% else %>
					<ul class="nav pull-right">
						<li>
							<%= button_to "Sign Up", new_user_path, method: :get, class: "btn btn-success", 
							style: 'height: 30px; padding: 5px;' %>
						</li>
						<li>
							<%= link_to "Log In", login_path %>
						</li>
					</ul>
				<% end %>
	    </div>
	  </div>
	</div>
</header>
