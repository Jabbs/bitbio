<!DOCTYPE html>
<html>
<head>
  <% if !ENV['STAGING'].present? || Rails.env.development? %>
    <link rel="image_src" href="<%= image_path('bitbio_logo.png') %>" />
    <title><%= content_for?(:title) ? yield(:title) : t('application.root.title') %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : t('application.root.description') %>">
  <% else %>
    <title>bitBIO Staging Site</title>
  <% end %>
  
  <title></title>
  <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/flick/jquery-ui.css", "application" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  <%= render 'layouts/google_analytics' %>
  <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->
</head>
<body>
  <%= render 'layouts/header' %>
  <div class="container" id="<%= controller_name %>_<%= action_name %>">
  	<div class="row">
  	  <div class="span3" id="sidebar">
    	  <%= render 'shared/sidebar' %>
    	</div>
    	<div class="span9 pull-right" id="main_container">
    	  <% flash.each do |name, msg| %>
      	  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
      	    <a class="close" data-dismiss="alert">Ã—</a>
      	    <%= msg %>
      	  </div>
      	<% end %>
      	
      	<% if current_user %>
        <!-- Sending a message -->
        <div id="message-form">
          <div class="row">
            <div class="span6">
              <%= form_for(@message) do |f| %>
              	<%= render 'shared/error_messages', object: f.object %>
              	<div class="field">
                  <%= f.hidden_field :sender_id, value: current_user.id %>
                  <%= f.hidden_field :receiver_id %>
                  <% if @project %>
                    <%= f.hidden_field :project_id, value: @project.id %>
                  <% end %>
                </div>
                <% if @project && !@project.new_record? %>
                  <div class="to">To: <%= link_to "#{@project.user.full_name}", @project.user %></div>
                  <div class="field">
                    <%= f.text_field :title, value: "Project: #{@project.name}", placeholder: "Message title" %> 
                  </div>
                <% else %>
                  <div class="field">
                    <%= f.text_field :title, placeholder: "Message title", style: 'width: 420px' %> 
                  </div>
                <% end %>
              	<div class="field">
                  <%= f.text_area :content, rows: 3, placeholder: "Message content" %>
                </div>
                <div class="cancel">cancel</div>
              		<%= f.submit 'Send', class: "btn", style: "margin-bottom: 0px;", disable_with: 'Submitting...' %>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
        
      	
    	  <%= yield %>
    	</div>
  	</div>
  </div>
  <%= render 'layouts/footer' %>
</body>
</html>
