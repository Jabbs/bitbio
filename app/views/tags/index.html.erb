<% if !ENV['STAGING'].present? || Rails.env.development? %>
  <% content_for :title do %>
    <%= t('application.root.title_with_tag_line', tag_line: "Tags") %>
  <% end %>
  <% content_for :description do %>
    Search for scientific services or projects by tags.
  <% end %>
<% end %>

<div class="row">
  <div class="span3">
    <%= render 'shared/sidebar/science_search' %>
  </div>
  <div class="span9">
    <h2>All tags</h2>
    <i class="icon-tags"></i>:
    <%= raw Tag.top_tags.map { |t| link_to "#{t.name} (#{t.projects.size})", tag_path(t.name) }.join(', ') %>
  </div>
</div>
