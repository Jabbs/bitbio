<div style="margin-bottom: 10px;">
  <div id="short-tag-list">
    <% if params[:tag] %>
      <i class="icon-tag"></i>: <strong><%= params[:tag] %> (<%= Tag.find_by_name(params[:tag]).projects.size %>)</strong><br>
    <% end %>
    <div class="small inline">
      <i class="icon-tags"></i>:
      <%= raw Tag.top_project_tags.take(18).map { |t| link_to "#{t.name} (#{t.projects.size})", tag_projects_path(t.name) }.join(', ') %>
      <% if Tag.top_project_tags.size > 18 %>
    </div>
    <i class="icon-expand-alt expand-tags" title="expand tag list"></i>
    <% end %>
  </div>
  <div id="long-tag-list">
    <% if params[:tag] %>
      <i class="icon-tag"></i>: <strong><%= params[:tag] %> (<%= Tag.find_by_name(params[:tag]).projects.size %>)</strong><br>
    <% end %>
    <div class="small inline">
      <i class="icon-tags"></i>:
      <%= raw Tag.top_project_tags.map { |t| link_to "#{t.name} (#{t.projects.size})", tag_projects_path(t.name) }.join(', ') %>
      <i class="icon-collapse-alt expand-tags" title="expand tag list"></i>
    </div>
  </div>
</div>
