<% if !ENV['STAGING'].present? || Rails.env.development? %>
  <% content_for :title do %>
    <%= t('application.root.title_with_tag_line', tag_line: "Tags") %>
  <% end %>
  <% content_for :description do %>
    Search for events by tags.
  <% end %>
<% end %>

<div class="row">
  <div class="span9 pull-right">
    <% if current_user %>
    <div style="height: 0px;"><%= link_to "<i class='icon-plus'></i> ADD EVENT".html_safe, new_event_path, class: 'my-button-blue',
    style: 'position:relative; left: 587px; top: -40px; z-index: 12;' %></div>
    <% end %>
    <h2>Event tags</h2>
    <i class="icon-tags"></i>:
    <%= raw Tag.top_event_tags.map { |t| link_to "#{t.name} (#{t.events.size})", tag_events_path(t.name) }.join(', ') %>
  </div>
</div>