<% if !ENV['STAGING'].present? || Rails.env.development? %>
  <% content_for :title do %>
    <%= t('application.root.title_with_tag_line', tag_line: "#{@user.full_name}") %>
  <% end %>
  <% content_for :description do %>
    <%= @user.full_name %> - <%= @user.bio %>
  <% end %>
<% end %>

<% if @user.researcher? %>
  <%= link_to '← back', researchers_path %>
<% elsif @user.provider? %>
  <%= link_to '← back', providers_path %>
<% end %>
<div class="row">
  <div class="span9">
    <h2>bitBIO Account: <%= @user.full_name %> 
    <% if current_user?(@user) %>
      <%= link_to 'edit', edit_user_path %>
    <% end %>  
    </h2>
  </div>
</div>
<hr>
<div class="row">
  <div class="span3">
    <h3>Account Info</h3>
    <dl>
      <dt>General</dt>
      <dd>
        <% if @user.researcher? %>
          <i class="icon-user"></i> 
        <% elsif @user.provider? %>
          <i class="icon-home"></i> 
        <% end %>
        <%= @user.account_type %></dd>
      <dd><%= @user.full_name %></dd>
      <dd><%= mail_to(@user.email) %></dd>
      <dd><%= @user.phone %></dd>
    </dl>
    <dl>
      <dt>Scientific</dt>
      <dd><%= @user.organization %></dd>
      <dd><%= @user.bio %></dd>
    </dl>
    <dl>
      <dt>Location</dt>
      <dd><%= @user.address %></dd>
      <dd><%= @user.city %>, <%= @user.state %>, <%= @user.zip %></dd>
      <dd><%= @user.country %></dd>
    </dl>
  </div>
  <div class="span6">
    <h3>Projects</h3>
    <% unless @projects.empty? %>
      <% @projects.each do |project| %>
        <%= render 'projects/project', project: project %>
      <% end %>
    <% else %>
      <em>n/a</em>
    <% end %>
  </div>
</div>
