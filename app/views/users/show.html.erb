<% if !ENV['STAGING'].present? || Rails.env.development? %>
  <% content_for :title do %>
    <%= t('application.root.title_with_tag_line', tag_line: "#{@user.full_name}") %>
  <% end %>
  <% content_for :description do %>
    <%= @user.full_name %> - <%= @user.bio %>
  <% end %>
<% end %>

<% if current_user %>
<div class="row" style="margin-top: 10px;">
  <div class="span4">
    <%= link_to "&larr; back".html_safe, :back %>
  </div>
</div>
<% end %>

<% if current_user && current_user?(@user) && !current_user.verified %>
	<div class="alert" style="margin-top: 10px;">
		<strong>NOTICE:</strong>
	  Your account has not been verified. <%= link_to 'Resend verification email', user_resend_url(current_user), disable_with: 'Sending...' %>
	</div>
<% end %>

<div class="row" style="margin-top: 10px;">
  <div class="span2" style="width: 80px;">
    <%= image_tag 'blank_avatar.jpg', title: @user.full_name, id: 'user-avatar' %>
  </div>
  <div class="span5" style="margin-top: -8px;">
    <h2><%= @user.full_name %></h2>
    <div class="user-title"><%= @user.organization %></div>
    <div class="user-title"><%= country_with_us_shortened(@user.country) %></div>
  </div>
  <div class="span2 pull-right" style="margin-top: -8px;">
    <% if current_user?(@user) %>
      <%= link_to 'edit profile', edit_user_path(@user), class: 'pull-right my-button' %>
    <% end %>
  </div>
</div>
<hr style="margin-top:0;">

<div class="row">
  <div class="span9">
    <h3>BIO</h3>
    <p>
      <% if @user.bio %>
        <%= @user.bio %>
      <% else %>
        <em>empty</em>
      <% end %>
    </p>
  </div>
</div>

