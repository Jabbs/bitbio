<div class="row">
  <div class="span10">
    <h2>bitBIO Account: <%= @user.first_name %> <%= @user.last_name %></h2>
  </div>
</div>
<div class="row">
  <div class="span4">
    <h2>Account Info</h2>
    <% if current_user?(@user) %>
      <p><%= link_to 'edit', edit_user_path %></p>
    <% end %>
    <dl>
      <dt>General</dt>
      <dd><%= @user.full_name %></dd>
      <dd><%= @user.email %></dd>
      <dd><%= @user.phone %></dd>
    </dl>
    <dl>
      <dt>Scientific</dt>
      <dd><%= @user.organization %></dd>
      <dd><%= @user.description %></dd>
    </dl>
  </div>
  <div class="span6">
    <h2>Projects</h2>
    <% if current_user?(@user) %>
      <p><%= link_to "Create a Project", new_project_path %></p>
    <% end %>
    <% unless @projects.empty? %>
      <% @projects.each do |project| %>
        <%= render 'projects/project', project: project %>
      <% end %>
    <% else %>
      <em>You do not have any projects.</em>
    <% end %>
  </div>
</div>
