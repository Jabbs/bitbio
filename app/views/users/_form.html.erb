<%= form_for @user do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="row">
    <div class="span8 offset1">
      <% if action_name == "edit" %>
      <h1>Editing Account</h1>
      <% else %>
      <h1>Join bitBIO!</h1>
      <% end %>
      <div class="row">
       <div class="span2">
          <label>Account Type:</label>
        </div>
        <div class="span6">
          <%= f.radio_button :account_type, "Researcher", checked: true  %>
  		    <label style="display: inline; margin-right: 20px;">Researcher</label>
  		    <%= f.radio_button :account_type, "Provider" %>
  		    <label style="display: inline; margin-right: 20px;">Provider</label>
        </div>
      </div>
      <div class="row">
        <div class="span2">
  				<label>Name:</label>
  			</div>
  			<div class="span6">
  		    <%= f.text_field :first_name, class: "span2", placeholder: "First" %> 
  				<%= f.text_field :last_name, class: "span2", placeholder: "Last" %>
  			</div>
      </div>
      
      <div class="row">
        <div class="span2">
  				<label>Email:</label>
  			</div>
  			<div class="span6">
  		    <%= f.text_field :email, class: "span3", placeholder: "Email" %> 
  			</div>
      </div>
      
      <div class="row">
        <div class="span2">
  				<label>Phone:</label>
  			</div>
  			<div class="span6">
  		    <%= f.text_field :phone, class: "span3", placeholder: "Phone #" %> 
  			</div>
      </div>
      
      <div class="row">
        <div class="span2">
  				<label>Organization:</label>
  			</div>
  			<div class="span6">
  		    <%= f.text_field :organization, class: "span3", placeholder: "Organization name" %> 
  			</div>
      </div>
      
      <div class="row">
        <div class="span2">
  				<label>Bio:</label>
  			</div>
  			<div class="span6">
  		    <%= f.text_area :description, class: "span3", class: 'span4', rows: 7, 
  		        placeholder: "Please describe your background in some detail" %> 
  			</div>
      </div>
      
      <div class="row">
  			<div class="span2">
  				<label class="inline">Password:</label>
  			</div>
  			<div class="span2">
  				 <%= f.password_field :password, class: 'span2' %>
  			</div>
  		</div>
  		<div class="row">
  			<div class="span2">
  				<label class="inline">Confirm Password:</label>
  			</div>
  			<div class="span2">
  				 <%= f.password_field :password_confirmation, class: 'span2' %>
  			</div>
  		</div>
      
      <div class="row">
        <div class="span8">
          <% if action_name == 'edit' %>
            <%= f.submit "Update Account", class: "btn btn-large" %>
          <% else %>
            <%= f.submit "Create Account", class: "btn btn-large" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
<% end %>
