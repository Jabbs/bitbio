<% if !ENV['STAGING'].present? || Rails.env.development? %>
  <% content_for :title do %>
    <%= t('application.root.title_with_tag_line', tag_line: "#{@project.name}") %>
  <% end %>
  <% content_for :description do %>
    <%= @project.name %> - <%= @project.description %>
  <% end %>
<% end %>

<div class="row" style="margin-bottom: 5px;">
  <div class="span9">
    <%= link_to 'â† back', projects_path %>
  </div>
</div>
<%= render 'projects/project_full' %>
<hr>

<% unless @comments.empty? %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', comment: comment %>
  <% end %>
<% end %>
<div class="row">
  <div class="span9 new-comment-well">
  <% if current_user %>
      <%= render 'comments/form' %>
  <% else %>
    <em><%= link_to 'Sign up', new_user_path %> to leave a comment.</em>
  <% end %>
  </div>
</div>
