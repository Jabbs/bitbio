<% if !ENV['STAGING'].present? || Rails.env.development? %>
  <% content_for :title do %>
    <%= t('application.root.title_with_tag_line', tag_line: "Science Community, Science Market, and Science Outsourcing") %>
  <% end %>
  <% content_for :description do %>
    <%= t("application.root.description") %>
  <% end %>
<% end %>

<% if current_user %>
  <% if @projects && !@projects.empty? && params[:search] %>
    <%= render 'tags/tag_list' %>
    <div class="row" style="margin-top: 10px;">
      <div class="span9">
      <% @projects.each do |project| %>
        <%= render 'project', project: project %>
      <% end %>
      </div>
    </div>
    <%= will_paginate %>
    <hr style="margin-top: 0px;">
  <% elsif @projects.empty? && params[:search] %>
  
    <div class="row">
      <div class="span9">
        <div class="alert alert-block my-alert" style="margin-bottom: 10px; margin-top: 10px;">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <h4>No projects matched your search.</h4>
           Please check back another time or sign up for <%= link_to 'project alert emails', '#' %>.
        </div>
      </div>
    </div>
  <% end %>
<% elsif params[:search] %>
  <div class="row">
    <div class="span9">
      <div class="alert alert-block my-alert" style="margin-bottom: 10px; margin-top: 10px;">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4>Notice!</h4>
        You must be signed in to search or create project listings. Please 
        <%= link_to 'sign up', new_user_path %> or <%= link_to 'sign in', login_path %>.
      </div>
    </div>
  </div>
<% end %>

<% unless @projects && !@projects.empty? && params[:search] && current_user %>
  <%= render 'blogs/blogs', blogs: @blogs %>
  <%= render 'shared/info' %>
<% end %>
<!-- Modal -->
<%= render 'users/sign_up_modal' %>
