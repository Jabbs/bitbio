<% if !ENV['STAGING'].present? || Rails.env.development? %>
  <% content_for :title do %>
    <%= t('application.root.title_with_tag_line', tag_line: "Science Community, Science Market, and Science Outsourcing") %>
  <% end %>
  <% content_for :description do %>
    <%= t("application.root.description") %>
  <% end %>
<% end %>

<% if current_user %>
  <% if @projects && !@projects.empty? && params[:keyword] %>
    <div class="row" style="margin-top: 10px;">
      <div class="span9">
      <% @projects.each do |project| %>
        <%= render 'project', project: project %>
      <% end %>
      </div>
    </div>
    <%= will_paginate %>
    <hr>
  <% elsif @projects.empty? && params[:keyword] %>
    <div class="row">
      <div class="span9">
        <hr>
          <p style="text-align:center;"><em>***No projects matched your search. Please check back another time or 
          sign up for <%= link_to 'project alert emails', '#' %>.***</em></p>
        <hr>
      </div>
    </div>
  <% end %>
<% elsif params[:keyword] %>
  <div class="row">
    <div class="span9">
      <hr>
        <p style="text-align:center;"><em>***You must be signed in to view project listings. Please 
        <%= link_to 'sign up', new_user_path %> or <%= link_to 'sign in', login_path %>.***</em></p>
        <hr>
    </div>
  </div>
<% end %>

<% unless @projects && !@projects.empty? && params[:keyword] && current_user %>
  <div class="row" style="margin-top: 10px;">
    <div class="span9">
      <p>
        An online <strong class="gold">science community</strong> and resource built by you, for you. If 
        you are outsourcing science, searching for service providers, collaborating on a research project,
        or looking for assistance, bitBIO is for you.
      </p>
      <p>
        Gain instant <strong class="gold">access</strong> to new resources, providers, and equipment 
        you may have otherwise not found, and easily exchange science with research institutes, hospitals, universities,
        and other service providers, globally.
      </p>
      <p>
        Find out what scientific methods other researchers or service providers are using. 
        <strong class="gold">Search for projects</strong> to exchange science advice, opinions, and services. 
      </p>
      <p>
        Learn about new research, methods, and technologies to use for your project and what the science 
        market has to offer. Quickly <span class="gold">promote research</span> questions and answers 
        in the science community to help each other.
      </p>
    </div>
  </div>
  <hr>

  <div class="row" style="margin-top: 10px;">
    <div class="span9 taglines">
      <h1 style="padding-left: 10px;"><%= image_tag 'researcher.png' %> Researchers</h1>
      <div class="one_two_three">
        <h4>1. List a project.</h4>
        <h3>2. Promote and share project(s) with the science community.</h3>
        <h2>3. Get feedback, collaborate, and find scientific services.</h2>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="span9 taglines">
      <h1 style="padding-left: 10px;"><%= image_tag 'provider.png' %> Service Providers</h1>
      <div class="one_two_three">
        <h4>1. Search projects.</h4>
        <h3>2. Discuss possibilities, alternative methods, and service offerings.</h3>
        <h2>3. Connect with research projects and researchers.</h2>
      </div>
    </div>
  </div>
  <hr>
  <p>
    Why rely on expensive services to broker your science project when all you really need is 
    access, exposure, and some help from the science community. <%= link_to 'Join', new_user_path %> bitBIO
    and exchange science projects!
  </p>
  <hr>
    <h2>What type of science?</h2>
    <%= image_tag 'science_types_word_cloud.png' %>
  <hr>
<% end %>

