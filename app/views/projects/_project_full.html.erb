<div class="row">
  <div class="span9 project-full-well">
    <h2><%= @project.name %></h2>
    <h4>Type: <%= @project.science_type %></h4>
    <h5><%= @project.service_need %></h5>
    <p><%= @project.description %></p>
  </div>
</div>
<% if current_user?(@project.user) %>
<div class="row">
  <div class="span9">
    <%= link_to "Edit", edit_project_path(@project), class: 'btn' %>
    <%= link_to "Remove", project_path(@project), method: :delete, confirm: "Are you sure?", class: 'btn btn-danger' %>
  </div>
</div>
<% end %>
