<div class="row" style="margin-top: 10px;">
  <div class="span9 project-full-well">
    <% if @project.service_need == "Science + Services" %>
      <% back_color = "sci_ser" %>
    <% elsif @project.service_need == "Science" %>
      <% back_color = "sci" %>
    <% elsif @project.service_need == "Services" %>
      <% back_color = "ser" %>
    <% elsif @project.service_need == "Data Analysis" %>
      <% back_color = "dat" %>
    <% elsif @project.service_need == "Clinical Studies" %>
      <% back_color = "cli" %>
    <% else %>
      <% back_color = "def" %>
    <% end %>
    <div style="height: 0;">
      <div class="date">
        <% if @project.days_til_start == 1 %>
          <div class="mm">starts in</div>
          <div class="dd"><p class="day"><%= @project.days_til_start %></p></div>
          <div class="yyyy">day</div>
        <% elsif @project.days_til_start > 0 %>
          <div class="mm">starts in</div>
          <div class="dd"><p class="day"><%= @project.days_til_start %></p></div>
          <div class="yyyy">days</div>
        <% elsif @project.days_til_start == 0 %>
          <div class="mm">starts</div>
          <div class="dd"><p class="day"><span style="font-size: 60%;">today</span></p></div>
          <div class="yyyy"></div>
        <% elsif @project.days_til_start == -1 %>
          <div class="mm">started</div>
          <div class="dd"><p class="day"><%= @project.days_til_start.abs %></p></div>
          <div class="yyyy">day ago</div>
        <% elsif @project.days_til_start < 0 %>
          <div class="mm">started</div>
          <div class="dd"><p class="day"><%= @project.days_til_start.abs %></p></div>
          <div class="yyyy">days ago</div>
        <% end %>
      </div>
    </div>
    <div class="row" style="padding-left:20px">
      <h2><%= @project.name %> <span class="dark" style="font-size: 70%;">
        (<%= country_with_us_shortened(@project.user.country) %>)</span> 
      </h2>
      <% if current_user?(@project.user) %>
        <%= link_to "Edit", edit_project_path(@project) %>
        <br>
        <br>
      <% end %>
    </div>
    <div class="row" style="padding-left:20px">
      <h4 style='margin-bottom: 5px;'>
        <div class="service <%= back_color %>"><%= @project.service_need %></div>
        <%= @project.science_type %> 
      </h4>
    </div>
    <% if current_user && current_user != @project.user && current_user.verified? %>
      <div class="row" style="padding-left:20px">
        <%= content_tag "div", id: 'message', title: "Send a message to the project owner", style: 'width: 244px;', 
            data: {blah: @project.user.id} do %>
            <i class="icon-envelope"></i> send a direct message to project owner
        <% end %>
      </div>
    <% end %>
    <div class="row" style="padding-left:20px">
      <i class="icon-calendar"></i> Start date: <%= @project.start_date.strftime("%b %e, %Y") %> 
      <span style="font-size: 70%;">(<%= to_days_ago_or_from_now(@project.days_til_start) %>)</span>
        
    </div>
    <div class="row">
      <div class="span6" style="margin-top: 10px;">
        <% if @project.instruments.any? %>
          Needs:
          <% @project.instruments.each do |instrument| %>
            <div>&bull; <%= instrument.alias %> 
              <span style="font-size: 70%;">(<%= instrument.must_have ? 'must have' : 'nice to have' %>)</span></div>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="description"><%= simple_format(Rinku.auto_link(@project.description).html_safe) %></div>
    <div class="row" style="margin-top: 3px;">
      <div class="span5">
        <i class="icon-eye-open" style="margin-top: 1px;"></i> views: <%= @project.view_count %>
        <i class="icon-envelope" style="margin-top: 1px; margin-left: 20px;"></i> messages: <%= @project.messages.size %>
        <i class="icon-comment" style="margin-top: 1px; margin-left: 20px;"></i> comments: <%= @project.comments.size %>
      </div>
      <p class="time_ago pull-right"><small>Listed <%= time_ago_in_words(@project.created_at) %> ago.</small></p>
    </div>
  </div>

</div>

