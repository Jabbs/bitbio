.row
  .span12
    - flash.each do |name, msg|
      %div{:class => "alert alert-#{name == :notice ? "success" : "error"}", :style => "margin-top: 0px;"}
        %a.close{"data-dismiss" => "alert"} ×
        = msg
.div{style: "height:0px;"}
  = image_tag "coming_soon.jpg", id: "coming-soon"
.row
  .span12
    %h1#header-coming-soon
      = link_to "<i class='icon-beaker'></i>Bitbio".html_safe, root_path, id: 'logo', title: 'Home'
      %em{style: "margin-left:48px;"}
        Science Community, Marketplace, and Resource
    .div{style: "height: 0px;"}
      .info_header_coming_soon
        
%br
.row{ style: "margin-top:0px; margin-bottom: 50px;"}
  .span9
    = image_tag "computer_bitbio.png", style: "position:relative; z-index:2; left:-25px; top:40px;"
  .span3
    #contact-well
      = form_for @contact do |f|
        .center
          %h4{ style: "font-weight: 500;"} Join our community and sign up for our beta release!
          %br
          = f.text_field :first_name, class: "span2", placeholder: "First Name"
          %br
          = f.text_field :last_name, class: "span2", placeholder: "Last Name"
          %br
          = f.text_field :email, class: "span2", placeholder: "Email"
          %br
          .smaller
            What type of scientist are you?
        .div{style: "margin-left:30px;"}
          = f.select :user_type, ["Researcher", "Service Provider", "SaaS Provider", "Manufacturer", "Other"]
        .center
          = f.submit "SUBMIT", class: "my-button-blue"
        .center
          .small{style: "line-height:140%; margin-top:10px;"}
            100% privacy guaranteed.
            %br
            We'll never share your email.
.row{ style: "position:relative; z-index:5;"}
  .span10.offset1
    %hr
    .center
      %h2{ style: "font-weight:300;"} An online community and resource built by researchers and service providers in the life science industries.
    %hr
.row{ style: "position:relative; z-index:3;"}
  .span10.offset1
    .well{ style: "background:white; padding-top: 30px;"}
      .row
        .span2
          = image_tag "instruments/hiseq_2000.jpg"
        .span7{style: "margin-left:0px; width:590px;"}
