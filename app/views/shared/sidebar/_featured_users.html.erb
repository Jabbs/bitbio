<div id="featured-users">
  <h2 class="info_header" style="margin-bottom: 10px;">Featured members</h2>
  <% @featured_users.each do |user| %>
  <div class="row">
    <div class="span3">
      <div class="user">
        <%= image_tag 'blank_avatar.jpg', size: '40x40', title: user.full_name %>
      </div>
      <div class="top">
        <h5><%= link_to "#{user.full_name}", user_path(user) %></h5>
        <%= user.organization %>
      </div>
    </div>
  </div>
  <hr style="margin-top:5px; margin-bottom:5px;">
  <% end %>
</div>


