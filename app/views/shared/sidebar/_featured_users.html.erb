<div id="featured-users" class="smaller-shell">
  <h2 class="info_header" style="margin-bottom: 10px;">Featured members</h2>
  <% @featured_users.each do |user| %>
  <div class="row">
    <div class="span3">
       <div class="span1 user">
          <% if user.attachments.any? %>
            <%= link_to image_tag(user.attachments.first.image.url(:thumb), 
                title: user.full_name).to_s, user_path(user) %>
          <% else %>
            <%= link_to image_tag('blank_avatar_thumb.jpg', title: user.full_name), user_path(user) %>
          <% end %>
        </div>
        <div class="span2 top no-left-margin">
          <h5><%= link_to "#{user.full_name}", user_path(user), title: user.full_name %></h5>
          <p style="margin-top:3px;"><%= user.facility.name %></p>
        </div>
    </div>
  </div>
    <% if user == @featured_users.last %>
      <div style="margin-bottom:10px;"></div>
    <% else %>
      <hr style="margin-top:5px; margin-bottom:5px;">
    <% end %>
  <% end %>
</div>


