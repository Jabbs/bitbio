
<%= form_tag projects_path, :method => 'get' do %>
<div class="row">
  <div class="span3">
    <%= select_tag :country, options_for_select(User::COUNTRIES, selected: params[:country]), 
    { prompt: "All countries", class: 'span2' } %>
  </div>
</div>

<div class="row">
  <div class="span3">
    <%= text_field_tag :start_date, params[:start_date], placeholder: "from" %>
    <%= text_field_tag :end_date, params[:end_date], placeholder: "to" %>
  </div>
</div>
<div class="row">
  <div class="span3">
    <%= text_field_tag :keyword, params[:keyword], placeholder: "keyword" %>
  </div>
</div>
<div class="row">
  <div class="span3">
    <div class="pull-right">
      <%= submit_tag "Filter projects", :name => nil, class: 'btn' %>
    </div>
  </div>
</div>
<% end %>
