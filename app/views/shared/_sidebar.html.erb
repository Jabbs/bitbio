<div class="row">
  <div class="span3">
    <h2 style="margin-top: 5px;">Search Projects</h2>
  </div>
</div>

<%= form_tag projects_path, :method => 'get' do %>
<div class="row">
  <div class="span3">
    <%= text_field_tag :start_date, params[:start_date], placeholder: "from" %>
    <%= text_field_tag :end_date, params[:end_date], placeholder: "to" %>
  </div>
</div>
<div class="row">
  <div class="span3">
    <%= text_field_tag :search, params[:search], placeholder: "keyword" %>
  </div>
</div>
<div class="row">
  <div class="span3">
    <div class="pull-right">
      <%= submit_tag "Filter", :name => nil, class: 'btn' %>
    </div>
  </div>
</div>
  
<% end %>
