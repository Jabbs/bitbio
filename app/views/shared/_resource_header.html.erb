<% resource_header = get_resource_header %>
<% if !resource_header.blank? %>
  <div class="row" style="margin-bottom: 10px;">
    <% if current_user %>
    <div class="span3">
      <%= link_to "&larr; back".html_safe, :back %>
    </div>
    <% end %>
    <div class="span9 pull-right">
      <h1 class="underline-header"><%= resource_header %></h1>
    </div>
  </div>
<% end %>