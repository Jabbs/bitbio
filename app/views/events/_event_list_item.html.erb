<% action_name != "home" ? cb = "change-border" : cb = "" %>
<div class="span3 event-well <%= cb %>">
  <div class="row">
    <div class="span3" style="width: 204px;">
      <div class="event">
        <% if event.attachments.any? %>
          <%= link_to image_tag(event.attachments.first.image.url(:thumb), 
              title: event.user.full_name).to_s, event_path(event) %>
        <% else %>
          <%= link_to "<i class='icon-calendar-empty'></i>".html_safe, event_path(event), title: event.title %>
        <% end %>
      </div>
      <div class="top">
        <div style="height:0px;" class="start">
          <div class="inside">
            <strong><%= event.start_date.strftime("%D") %></strong><br>
            <i class="icon-comment dark"></i><span class="dark">: <%= event.comments.count %></span>
          </div>
        </div>
        <h4 style="height:60px; overflow:hidden;"><%= link_to truncate(event.title, length: 80), event_path(event), title: event.title %></h4>
        <p style="height:15px; overflow:hidden;">
          <i class="icon-map-marker dark" style="padding-right:2px;"></i>:
          <%= event.location.city_country %>
        </p>
      </div>
      <div class="row" style="margin-top:.5em;">
        <div class="span3" style="width: 204px;">
          <div class="small-links">
            <% if event.tags.any? %>
            <i class="icon-tags dark"></i>: <%= raw event.tags.map { |t| link_to t.name, tag_events_path(t.name)  }.join(', ') %>
            <% else %>
            <i class="icon-tags dark"></i>: n/a
            <% end %>
          </div>
        </div>
      </div> 
    </div>
  </div>
</div>