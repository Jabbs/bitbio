<div class="span9 event-well">
  <div class="row">
    <div class="span8">
      <hr style="margin: 5px 0px 5px 0px; width: 680px;">
      <div class="user">
        <% if event.user.attachments.any? %>
          <%= link_to image_tag(event.user.attachments.first.image.url(:thumb), 
              title: event.user.full_name).to_s, user_path(event.user) %>
        <% else %>
          <%= link_to image_tag('blank_avatar_thumb.jpg', title: event.user.full_name), user_path(event.user) %>
        <% end %>
      </div>
      <div class="top">
        <h4><%= link_to truncate(event.title, length: 60), event_path(event), title: event.title %></h4>
        <%= event.created_at.strftime("%D") %> by <%= link_to "#{event.user.full_name}", user_path(event.user), 
        title: event.user.full_name %>
      </div>
      <div class="row">
        <div class="span8">
          <div class="smaller">
            <% if event.tags.any? %>
            <i class="icon-tags dark"></i>: <%= raw event.tags.map { |t| link_to t.name, tag_events_path(t.name)  }.join(', ') %>
            <% else %>
            <i class="icon-tags dark"></i>: n/a
            <% end %>
          </div>
        </div>
      </div>  
    </div>
    <div class="span1" style="margin-top: 18px; margin-left:5px; border-left: 1px solid silver; height: 55px; padding-left: 5px;">
      <i class="icon-eye-open dark"></i><span class="dark">: <%= event.view_count %></span><br>
      <i class="icon-comment dark"></i><span class="dark">: <%= event.comments.count %></span>
    </div>
  </div>
</div>