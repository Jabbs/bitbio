<fieldset>
  <%= f.text_field :address1, class: 'span5', placeholder: "Street address 1", autocomplete: :off %>
  <%= f.text_field :address2, class: 'span5', placeholder: "Street address 2", autocomplete: :off %>
  <%= f.text_field :address3, class: 'span5', placeholder: "Street address 3", autocomplete: :off %>
  <br>
  <%= f.text_field :city, class: 'span2', placeholder: "City", autocomplete: :off %>
  <%= f.text_field :state, class: 'span2', placeholder: "State/Province", autocomplete: :off %>
  <%= f.text_field :zip, class: 'span2', placeholder: "Postal code", autocomplete: :off %>
  <%= f.select :country, Ravibhim::Continents::COUNTRIES, 
      { prompt: "--select country--" }, class: "span5" %>
</fieldset>