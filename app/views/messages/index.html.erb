<%= render 'header' %>

<% params[:sent] == "true" ? @messages = @sent_messages : @messages = @received_messages %>
<% if @messages.any? %>
  <% @messages.each do |message| %>
    <%= render 'message_list_item', message: message %>
  <% end %>
<% else %>
<div class="row">
  <div class="span9" style="padding-left: 20px;">
    <em>Empty</em>
  </div>
</div>
<% end %>
