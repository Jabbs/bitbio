<div class="row">
  <div class="span3">
    <%= render 'shared/sidebar/image_tagline1' %>
  </div>
  <div class="span9">
    <% if current_user %>
      <%= render "messages/form" %>
    <% end %>
    <%= render "messages/header" %>
    <% if @messages.any? %>
      <% @messages.each do |message| %>
        <%= render 'message_list_item', message: message %>
      <% end %>
      <%= will_paginate %>
    <% else %>
    <div class="row">
      <div class="span9">
        <div class="alert">
      		<strong>NOTICE:</strong>
      	  Empty.
      	</div>
      </div>
    </div>
    <% end %>
  </div>
  
</div>
